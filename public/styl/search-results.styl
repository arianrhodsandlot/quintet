.search-results-covers
  max-width 1000px
  margin 30px auto 60px auto
  line-height 0
  clearfix()
  @media (max-width: 1000px)
    margin 40px auto 60px auto
    text-align center
.cover
  display inline-block
  size 200px
  padding 6px
  float left
  transition all .2s
  overflow hidden
  @media (max-width: 1000px)
    float none
    margin 6px

  &:hover
    background #fff
    box-shadow 0 0 4px #aaa
    .title
      size calc(100% - 40px) 40px
    .fa-download
      right 0

  .cover-containter
    overflow hidden
    position relative
  .cover-link
    display block
    size 100%
  .cover-img
    size 100%
    background #ccc
    outline 1px solid #bbb
  .title
    box-sizing border-box
    display block
    size 100% 40px
    color #fff
    background alpha(#000, 0.8)
    font-size 12px
    overflow ellipsis
    margin (- @height) 0 0 0
    line-height @height
    position relative
    padding 0 10px
    text-decoration none
    transition width .2s
  .fa-download
    position absolute
    size 40px
    text-align center
    absolute bottom 0 right -40px
    line-height @height
    background #000
    color #fff
    transition right .2s
    z-index 1

  &.first
    size @width * 2

  @media (max-width: 1000px)
    &, &.first
      size 100px
      padding 0
.templates
  clear both
  padding 40px 0 0 0

.no-results-cover
  max-width 100%
  width 600px
  margin 100px auto 0 auto
  color #888
  font-size 14px
  text-align center
